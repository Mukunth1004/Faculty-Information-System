@model BUTPFIS.web.Models.ViewModels.LoginViewModel

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Faculty Information System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            font-family: monospace, sans-serif;
            margin: 0;
            padding: 0;
            background-color: hsl(215, 89%, 4%);
        }
        .header {
            background-color: hsl(213, 79%, 45%);
            padding: 20px;
            text-align: center;
        }
        .header img {
            width: 100px;
            height: 100px;
            margin: 10px;
        }
        .header div {
            color: #01010fed;
        }
        .header .info {
            margin-top: 20px;
            background-color: #01010fed;
            color: #FFFFFF;
            font-size: 28px;
            padding: 10px;
        }
        .login-container {
            background-color: rgba(0, 0, 0, 0.7); /* Semi-transparent black background for better contrast */
            border: 1px solid #ccc; /* Add border for visibility */
            border-radius: 8px; /* Rounded corners for the container */
            max-width: 400px;
            margin: 20px auto;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1), 0 0 20px rgba(0, 255, 255, 0.8); /* Glowing border effect */
        }
        .login-container input, .login-container button {
            border-radius: 0; /* Remove curved edges for inputs and button */
        }
        .btn-custom {
            background-color: transparent; /* Remove background color */
            color: #FFFFFF; /* Button text color */
            border: none; /* Remove border */
            padding: 10px 20px;
            margin-top: 10px; /* Reduced margin size */
            cursor: pointer; /* Pointer cursor on hover */
        }
        .btn-custom:hover {
            color: #FFFFFF; /* Ensure text color remains white on hover */
        }
        .notification {
            color: red;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <!-- Login Page -->
    

    <div class="login-container">
        <div class="container mx-auto">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-6">
                    <h2 class="text-center text-light">Login</h2>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    <!-- Validation Summary -->
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label text-light">Username</label>
                            <input type="text" id="username" class="form-control" asp-for="Username" required />
                            <span class="text-danger" asp-validation-for="Username"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label text-light">Password</label>
                            <input type="password" id="password" class="form-control" asp-for="Password" required minlength="6" />
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                        <div class="mb-3">
                            <button type="submit" class="btn btn-custom w-100">Login</button>
                        </div>
                        <input type="hidden" asp-for="ReturnUrl" />
                    </form>
                </div>
            </div>
        </div>
    </div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>