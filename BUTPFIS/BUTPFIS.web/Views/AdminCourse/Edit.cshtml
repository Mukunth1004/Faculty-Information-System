@model BUTPFIS.web.Models.ViewModels.EditCourse
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit Course</h1>
    </div>
</div>

<div class="container py-3">

    @if (Model != null)
    {

        <form method="post">

            <div class="mb-3">
                <label class="form-label">Course Id</label>
                <input type="text" class="form-control" id="courseId" asp-for="CourseId" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">Course Name</label>
                <input type="text" class="form-control" id="courseName" asp-for="CourseName" />
            </div>

            <div class="mb-3 d-flex">
                <button type="submit" class="btn btn-dark">Update</button>

                <button type="submit"
                        class="btn btn-danger ms-2"
                        asp-area=""
                        asp-controller="AdminCourse"
                        asp-action="Delete">
                    Delete
                </button>
            </div>

        </form>

    }

    else
    {
        <p> Course not found!</p>
    }

</div>