@model BUTPFIS.web.Models.ViewModels.AddCourseRequest
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Add New Course</h1>
    </div>
</div>

<div class="container py-3">
    <form method="post">

        <div class="mb-3">
            <label class="form-label">Course Name</label>
            <input type="text" class="form-control" id="courseName" asp-for="CourseName" required/>
            <span class="text-danger" asp-validation-for="CourseName"></span>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-dark">
                Save
            </button>
        </div>

    </form>
</div>