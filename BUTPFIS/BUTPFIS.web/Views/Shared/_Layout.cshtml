﻿@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> signInManager

@{
    var isAdmin = User.IsInRole("Admin");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BUTP - Faculty Information System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BUTPFIS.web.styles.css" asp-append-version="true" />

    <link href='https://cdn.jsdelivr.net/npm/froala-editor@latest/css/froala_editor.pkgd.min.css' rel='stylesheet' type='text/css' />
    <script type='text/javascript' src='https://cdn.jsdelivr.net/npm/froala-editor@latest/js/froala_editor.pkgd.min.js'></script>

    <style>
        body {
            font-family: monospace, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #01010fed;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .header {
            background-color: hsl(213, 79%, 45%);
            padding: 20px;
            text-align: center;
        }

            .header img {
                width: 100px;
                height: 100px;
                margin: 10px;
            }

        .centered-text {
            text-align: center;
        }

        .btn-custom {
            background-color: #01010fed;
            color: #FFFFFF;
            border: none;
        }

            .btn-custom:hover {
                background-color: #020202;
                color: #FFFFFF;
            }

        .content {
            flex: 1;
        }

        .footer {
            padding: 0px 0;
            font-size: 0.875rem;
            background-color: #f8f9fa;
        }
    </style>
</head>
<body>
    <div class="header">
        <div style="display: flex; justify-content: center; align-items: center;">
            <div style="margin-right: 20px; color: #01010fed; font-size: 24px; font-weight: bold;">பாரதிதாசன் பல்கலைக்கழகம்</div>
            <img src="C:\Users\mukun\OneDrive\Desktop\Internship\Bharathidasan_University_logo.png" alt="College Symbol" style="width: 100px; height: 100px; margin: 0 20px; transform: rotate(5deg);">
            <div style="margin-left: 20px; color: #01010fed; font-size: 30px;">Bharathidasan University</div>
        </div>
        <div style="margin-top: 20px; background-color: #01010fed; color: #FFFFFF; font-size: 28px; padding: 10px; display: grid; grid-template-columns: 1fr auto; align-items: center;">
            <div class="centered-text" style="padding-left: 200px;">
                <span style="font-size: 28px; color: #FFFFFF;">Faculty Information System</span><br>
                <span style="font-size: 17px; color: #FFFFFF;">Address: QMGW+V5P, Kajamalai Colony, Edamalaipatti Pudur, Tiruchirappalli, Tamil Nadu 620023</span>
            </div>
            <div style="display: flex; gap: 10px; justify-content: flex-end;">
                @if (signInManager.IsSignedIn(User))
                {
                    <div class="dropdown" style="display: inline-block;">
                        <button class="btn btn-custom dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            @User?.Identity?.Name
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="userDropdown">
                            @if (isAdmin)
                            {
                                <li><a class="dropdown-item" asp-area="" asp-controller="AdminCourse" asp-action="Add">Add Course</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="AdminFaculty" asp-action="Add">Add Faculty</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="AdminCourse" asp-action="List">All Courses</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="AdminFaculty" asp-action="List">All Faculty Information</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="AdminUsers" asp-action="List">Manage Faculties</a></li>
                            }
                            else
                            {
                                <li><a class="dropdown-item" asp-area="" asp-controller="EditProfile" asp-action="Edit">Edit Profile</a></li>
                            }
                            <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a></li>
                        </ul>
                    </div>
                }
                else
                {
                    <a class="btn me-3 bg-light text-dark"
                       asp-area=""
                       asp-controller="Account"
                       asp-action="Login">Login</a>

                    <a class="btn me-3 bg-light text-dark"
                       asp-area=""
                       asp-controller="Account"
                       asp-action="Register">Register</a>
                }
            </div>
        </div>
    </div>

    <div class="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2024 - BUTPFIS.web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>