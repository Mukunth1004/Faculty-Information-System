@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> signInManager

@{
    var isAdmin = User.IsInRole("Admin");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BUTP - Faculty Information System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BUTPFIS.web.styles.css" asp-append-version="true" />

    <link href='https://cdn.jsdelivr.net/npm/froala-editor@latest/css/froala_editor.pkgd.min.css' rel='stylesheet' type='text/css' />
    <script type='text/javascript' src='https://cdn.jsdelivr.net/npm/froala-editor@latest/js/froala_editor.pkgd.min.js'></script>

    <style>
        .header {
            background-color: #343a40; /* Same color as navbar */
            color: #fff;
            text-align: center;
            padding: 10px 0; /* Adjusted padding */
            position: relative;
        }

            .header img {
                width: 100px;
                height: 100px;
                margin: 0 10px; /* Reduced margin */
            }

            .header .uni-name-tamil,
            .header .uni-name-english {
                font-size: 24px;
                font-weight: bold;
                display: inline-block;
                margin: 0 5px; /* Adjusted margin */
            }

            .header .uni-name-english {
                font-size: 30px;
            }

            .header .address {
                font-size: 14px;
                margin-top: 5px;
            }

        .navbar-nav {
            flex-grow: 1;
        }

            .navbar-nav .nav-item {
                margin-right: 15px;
            }

        .btn-custom {
            background-color: #01010fed;
            color: #FFFFFF;
            border: none;
        }

            .btn-custom:hover {
                background-color: #020202;
                color: #FFFFFF;
            }

        .content {
            flex: 1;
            background-color: white;
            color: black;
            padding: 20px;
        }

        .footer {
            padding: 10px 0;
            font-size: 0.875rem;
            background-color: #f8f9fa;
            text-align: center;
        }
    </style>
</head>
<body>
    <header class="header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-5 text-end">
                    <div class="uni-name-tamil">பாரதிதாசன் பல்கலைக்கழகம்</div>
                </div>
                <div class="col-md-2 text-center">
                    <img src="https://res.cloudinary.com/djg5iadcq/image/upload/v1722408040/pzbehl2yias2jgyq0tha.png" alt="College Symbol" style="width: 110px; height: 100px; margin: 0 10px; transform: rotate(5deg);">
                </div>
                <div class="col-md-5 text-start">
                    <div class="uni-name-english">Bharathidasan University</div>
                </div>
            </div>
        </div>
    </header>

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Faculty Information System</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>

                    @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Admin
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item"
                                       asp-area=""
                                       asp-controller="AdminCourse"
                                       asp-action="Add">
                                        Add Course
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item"
                                       asp-area=""
                                       asp-controller="AdminFaculty"
                                       asp-action="Add">
                                        Add Faculty (Admin)
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item"
                                       asp-area=""
                                       asp-controller="AdminCourse"
                                       asp-action="List">
                                        All Courses
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item"
                                       asp-area=""
                                       asp-controller="AdminFaculty"
                                       asp-action="List">
                                        All Faculty Information
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item"
                                       asp-area=""
                                       asp-controller="AdminUsers"
                                       asp-action="List">
                                        Manage Faculties
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                </ul>

                <div class="d-flex align-items-center">
                    @if (signInManager.IsSignedIn(User))
                    {
                        <div class="nav-item dropdown me-3">
                            @if (!isAdmin)
                            {
                                <a class="nav-link dropdown-toggle text-light" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @User?.Identity?.Name
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item"
                                           asp-area=""
                                           asp-controller="EditProfile"
                                           asp-action="Edit">
                                            Edit My Profile
                                        </a>
                                    </li>
                                </ul>
                            }
                            else
                            {
                                <span class="nav-link text-light">@User?.Identity?.Name</span>
                            }
                        </div>
                        <a class="btn me-3 bg-light text-dark"
                           asp-area=""
                           asp-controller="Account"
                           asp-action="Logout">Logout</a>
                    }
                    else
                    {
                        <a class="btn me-3 bg-light text-dark"
                           asp-area=""
                           asp-controller="Account"
                           asp-action="Login">Login</a>
                        <a class="btn me-3 bg-light text-dark"
                           asp-area=""
                           asp-controller="Account"
                           asp-action="Register">Register</a>
                    }
                </div>
            </div>
        </div>
    </nav>

    <div class="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            &copy; 2024 - BUTPFIS.web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
