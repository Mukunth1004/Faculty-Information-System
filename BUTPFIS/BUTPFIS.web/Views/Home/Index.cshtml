@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card text-center" style="cursor: pointer;" onclick="location.href='@Url.Action("FacultiesByCourse", "Home", new { courseName = "MCA" })';">
                <div class="card-body">
                    <h3 class="card-title">MCA</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center" style="cursor: pointer;" onclick="location.href='@Url.Action("MScSpecializations", "Home")';">
                <div class="card-body">
                    <h3 class="card-title">M.Sc.</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center" style="cursor: pointer;" onclick="location.href='@Url.Action("FacultiesByCourse", "Home", new { courseName = "M.Tech. - Computer Science and Engineering" })';">
                <div class="card-body">
                    <h3 class="card-title">M.Tech</h3>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        margin-bottom: 20px;
        padding: 30px;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        transition: 0.3s;
    }

        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
        }
</style>


@if (TempData["Notification"] != null)
{
    <div class="alert alert-success">
        @TempData["Notification"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}
