@{
    ViewData["Title"] = "M.Sc. Specializations";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card text-center" style="cursor: pointer;" onclick="location.href='@Url.Action("FacultiesByCourse", "Home", new { courseName = "M.Sc. - Artificial Intelligence" })';">
                <div class="card-body">
                    <h3 class="card-title">Artificial Intelligence</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center" style="cursor: pointer;" onclick="location.href='@Url.Action("FacultiesByCourse", "Home", new { courseName = "M.Sc. - Data Science" })';">
                <div class="card-body">
                    <h3 class="card-title">Data Science</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center" style="cursor: pointer;" onclick="location.href='@Url.Action("FacultiesByCourse", "Home", new { courseName = "M.Sc. - Computer Science" })';">
